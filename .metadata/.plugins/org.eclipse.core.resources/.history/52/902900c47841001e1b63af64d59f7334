package day_06;

import java.util.Scanner;

public class 과제 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//컴퓨터가 가위 바위 보 중 랜덤으로 선택
		//0- 가위 1-바위 2-보
		//사용자도 가위 바위 보 선택해서 입력 (숫자, 문자 상관없음)
		//결과 출력 - 컴퓨터 - 가위, 사용자 - 가위 : 무승부
		

		
		
		Scanner scan = new Scanner(System.in);
		System.out.println("가위바위보 게임");
		System.out.println("가위, 바위, 보 중 하나를 입력하세요.");
		String s = scan.next();
		
		switch (s) {
		case "가위" : System.out.println(0);
		break;
		
		case "바위" :System.out.println(1);
		break;
		
		case "보" : System.out.println(2);
		break;
		default : System.out.println("잘못된 입력입니다.");
		}
		
		int com = (int)(Math.random()*2)+1;
		
		switch (com) {
		case 0 : System.out.println("가위");
		break;
		
		case 1 :System.out.println("바위");
		break;
		
		case 2 : System.out.println("보");
		break; 
		default : System.out.println("잘못된 입력입니다.");
		}
		
		
		
		
		
		
		
		scan.close();
		
		
		
		
		
		
		
		
		
		
	}

}
